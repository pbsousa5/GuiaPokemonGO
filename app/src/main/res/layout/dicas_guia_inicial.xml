<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Cidade de Pallet"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="  Então você começou a jogar Pokémon GO, mas têm dificuldade em encontrar informações úteis e relevantes para você, hein? Tudo bem, nós temos o que você precisa!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Nós sabemos que há uma abundância de informações sobre o jogo, sejam elas verdadeiras, especulações, ou mesmo falsos rumores, por isso estamos aqui para analisar essas informação e extrair os dados mais recentes e mais importantes para dar a você."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
